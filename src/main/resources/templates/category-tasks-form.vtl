<h1>Add a task to $category.getName()</h1>

<form action="/tasks" method="post">
  <input id="categoryId" name="categoryId" type="hidden" value="$category.getId()">

  <div class="form-group">
    <label for="description">Description</label>
    <input class="form-control input-sm" id="description" name="description" type="text" class="form-control" placeholder="Add a Task" autocomplete="off">
  </div>

  <button type="submit" class="btn btn-success btn-xs">Add Task</button>
</form>
